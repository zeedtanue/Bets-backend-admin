{
  "compilerOptions": {
    "module": "NodeNext",              // REQUIRED when using nodenext resolution
    "moduleResolution": "nodenext",   // Resolves modules like modern Node.js
    "target": "ES2021",                // Sets the output JS version
    "checkJs": true,                   // Enables JS type checking
    "allowJs": true                    // Allows JS files in the project
  }
}
